---
import { Image } from "astro:assets";
import BaseLayout from "@/layouts/BaseLayout.astro";
import marcfranquesaImage from "@/assets/marcfranquesa.jpg";
---

<BaseLayout>
  <h1>Marc Franquesa Mon√©s</h1>
  <div class="content">
    <div>
      <p>
        I am a 4th-year undergraduate student at <a
          class="outside-link"
          href="https://cfis.upc.edu/en"
          target="_blank">CFIS-UPC</a
        >, majoring in Mathematics and Data Science. I'm broadly interested in
        applied math. I also like to build stuff.
      </p>
      <p class="socials">
        <a class="outside-link" href="https://resume.marcfranquesa.com"
          >Resume</a
        > |
        <a class="outside-link" href="https://github.com/marcfranquesa"
          >Github</a
        > |
        <a
          class="outside-link"
          href="https://www.linkedin.com/in/marcfranquesam">Linkedin</a
        >
      </p>
    </div>
    <Image src={marcfranquesaImage} alt="Marc Franquesa" loading="eager" />
  </div>
</BaseLayout>

<style>
  h1 {
    padding-bottom: 20px;
    font-weight: 400;
    font-size: 30px;
  }

  .content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 50px;
  }

  p {
    text-align: justify;
  }

  .socials {
    text-align: center;
  }

  img {
    border-radius: 50%;
    max-width: 200px;
    height: auto;
  }

  p.socials a {
    padding: 5px;
  }

  @media (max-width: 600px) {
    .content {
      flex-direction: column-reverse;
    }
    h1 {
      text-align: center;
    }
  }
</style>
